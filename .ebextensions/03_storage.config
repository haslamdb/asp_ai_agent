# Simplified storage configuration for initial deployment
# EFS will be added manually via AWS Console after first successful deploy

commands:
  01_create_data_dir:
    command: "mkdir -p /var/app/current/data"
    ignoreErrors: true

container_commands:
  01_setup_data_permissions:
    command: "chmod -R 777 /var/app/current/data"
    leader_only: true
